    "add-extensions": {
        "org.gimp.GIMP.Manual": {
            "version": "2.10",
            "directory": "share/gimp/2.0/help",
            "locale-subset": true
        },
        "org.gimp.GIMP.Plugin": {
            "version": "2-40",
            "directory": "extensions",
            "add-ld-path": "lib",
            "merge-dirs": "plug-ins;scripts;help",
            "subdirectories": true,
            "no-autodownload": true
